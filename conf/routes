# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()
GET         /register            controllers.Account.register()
POST        /register            controllers.Account.doregister()
GET         /login               controllers.Account.login()
POST        /login               controllers.Account.dologin()
GET         /addproduct          controllers.Products.add()
POST        /addproduct          controllers.Products.doAdd()
GET         /contact             controllers.Contact.contact()
GET         /search              controllers.Search.search()
POST        /search              controllers.Search.doSearch()
GET         /admin               controllers.Administrator.index()
GET         /categories          controllers.Search.showAll()
POST        /categories          controllers.Search.getbooks()
POST        /logout              controllers.Application.logout()
GET         /update              controllers.UpdateUser.update()
POST        /update              controllers.UpdateUser.doupdate()
GET         /uploadpic           controllers.Account.upload()
POST        /uploadpic           controllers.Account.doupload()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

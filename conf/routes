# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index()
GET         /register                controllers.Account.register()
POST        /register                controllers.Account.doregister()
GET         /login                   controllers.Account.login()
POST        /login                   controllers.Account.dologin()
GET         /addproduct              controllers.Products.add()
POST        /addproduct              controllers.Products.doAdd()
GET         /contact                 controllers.Contact.contact()
GET         /search                  controllers.Search.search()
POST        /search                  controllers.Search.doSearch()
GET         /admin                   controllers.Administrator.index()
GET         /categories              controllers.Search.showAll()
POST        /categories              controllers.Search.getbooks()
POST        /logout                  controllers.Application.logout()
GET         /update                  controllers.Account.update()
POST        /update                  controllers.Account.doupdate()
GET         /uploadpic               controllers.Account.upload()
POST        /uploadpic               controllers.Account.doupload()
GET         /admin/users             controllers.Administrator.viewallusers()
GET         /uploadproductpic        controllers.Products.upload()
POST        /uploadproductpic        controllers.Products.doupload(bookid: String ?= "")
GET         /inventory               controllers.Products.getInventory()
GET         /updateproduct           controllers.Products.update()
POST        /updateproduct           controllers.Products.doupdate()
POST        /deleteproduct           controllers.Products.delete()
GET         /shoppingcart            controllers.Cart.getCart()
POST        /shoppingcart            controllers.Cart.add()
POST        /deletefromcart          controllers.Cart.delete()
POST        /updatecart              controllers.Cart.update()
POST        /clearcart               controllers.Cart.clear()
GET         /bank                    controllers.Bank.getBank()
GET         /addbank                 controllers.Bank.add()
POST        /addbank                 controllers.Bank.doAdd()
POST        /deletebank              controllers.Bank.delete()
GET         /updatebank              controllers.Bank.update()
POST        /updatebank              controllers.Bank.doupdate()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
